<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="be.kuleuven.book_my_court">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Find your passion!"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Book_my_court">
        <activity
            android:name=".FragmentActivity"
            android:exported="false"/>
        <activity
            android:name=".searchFragment.ChooseTimeActivity"
            android:exported="false" />
        <activity
            android:name=".searchFragment.BookMessageActivity"
            android:exported="false" />
        <activity
            android:name=".loginActivities.ForgetActivity"
            android:exported="false"/>
        <activity
            android:name=".loginActivities.RegisterActivity"
            android:exported="false"/>
        <activity
            android:name=".loginActivities.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>